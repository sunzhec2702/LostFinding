<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bitmap"
    tools:context=".LoginActivity" >

    <ImageView
        android:id="@+id/iv_login_Logo"
        android:layout_marginLeft="111.5dp"
        android:layout_marginRight="111.5dp"
        android:layout_marginTop="56dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/whose_logo"/>

    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="237.5dp"
        android:gravity="center" android:visibility="gone" />

    <EditText
        android:id="@+id/et_login_UserID"
        android:layout_marginLeft="55.5dp"
        android:layout_marginRight="55.5dp"
        android:layout_marginTop="237.5dp"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/rectangle2_button"
        android:gravity="center"
        android:hint="请输入用户名"
        android:textColor="#A6A6A6"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_login_UserPwd"
        android:layout_marginLeft="55.5dp"
        android:layout_marginRight="55.5dp"
        android:layout_marginTop="302.5dp"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/rectangle2_button"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="#A6A6A6"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/btn_login_forgetPwd"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="125dp"
        android:layout_marginTop="362.5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/rectangle1"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="忘记密码？"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
    <Button
        android:id="@+id/btn_login_Login"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="85dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="74.5dp"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/rectangle4_button"
        android:text="登陆"
        android:textColor="#fff"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/btn_login_Regist"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="125dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34.5dp"
        android:layout_width="fill_parent"
        android:background="@drawable/rectangle1"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="没有账号？"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

</RelativeLayout>