<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/top_icon"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dip"
            android:src="@drawable/selecter_back_icon" />
        <TextView
            android:id="@+id/btn_login_Regist"
            android:layout_marginRight="40dip"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="谁的"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_marginRight="10dip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="@color/white">
        <EditText
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="物品名称"
            android:textSize="22sp"
            android:textColor="@color/grey"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:src="@drawable/line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@color/white">
            <EditText
                android:id="@+id/mark"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="输入物品描述"
                android:textSize="20sp"
                android:textColor="@color/grey"/>
            <ImageView
                android:id="@+id/camera"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/selecter_camera_icon"/>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="是否对外显示联系方式"
                android:textSize="20sp"
                android:gravity="center"
                android:textColor="@color/grey"/>
            <Switch
                android:id="@+id/sw_cell"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textOff="否"
                android:textOn="是"
                android:textSize="6sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:text="确定修改"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:background="@drawable/bule_bar" />
    </LinearLayout>
</RelativeLayout>