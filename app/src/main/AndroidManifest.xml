<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.darren.lostfinding" >

    <uses-permission android:name="android.permission.CAMERA" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".Gdata"
        android:allowBackup="true"
        android:icon="@drawable/whose_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.example.darren.scanner.CaptureActivity"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|screenSize|smallestScreenSize"
            android:label="@string/title_activity_capture" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ForgetActivity"
            android:label="@string/title_activity_forget" >
        </activity>
        <activity
            android:name=".RegistActivity"
            android:label="@string/title_activity_regist" >
        </activity>
        <activity android:name=".RestpwActivity" >
        </activity>
        <activity
            android:name=".ChatingActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".AfterScanActivity" >
        </activity>
        <activity android:name=".MyQrActivity" >
        </activity>
        <activity android:name=".PersonInfomationActivity" >
        </activity>
        <activity android:name=".PersonInformationEditActivity" >
        </activity>
        <activity android:name=".EditQrInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Chat_mainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".PublicManagerActivity" >
        </activity>
        <activity android:name="com.example.darren.scanner.encode.QRImageActivity" >
        </activity>
        <activity
            android:name=".QRShowActivity"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".My_QRdetail_Activity" >
        </activity>
    </application>

</manifest>
